      Console.WriteLine("Right! Now you've asked for it!");
      Console.WriteLine(story);
      Console.WriteLine();
      Console.WriteLine();
      Console.ReadLine();
      Console.WriteLine("Okay, That was particularly bad. Thats on me but you did wake me up!");
